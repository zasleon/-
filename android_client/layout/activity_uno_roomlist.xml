<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xielm.myapplication.UNO_roomlist">

    <TextView
        android:text="房间列表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/UNO_roomlist_topic"
        android:textSize="33dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回大厅"
        android:id="@+id/UNO_exit_roomlist"
        android:textSize="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/UNO_roomlist_scrollview"
        android:fillViewport="false"
        android:layout_above="@+id/UNO_exit_roomlist"
        android:layout_below="@+id/UNO_roomlist_topic">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:id="@+id/UNO_roomlist_tablelayout">


        </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomlist_tips"
        android:layout_below="@+id/UNO_roomlist_scrollview"
        android:layout_alignRight="@+id/UNO_roomlist_scrollview"
        android:layout_alignEnd="@+id/UNO_roomlist_scrollview"
        android:layout_toRightOf="@+id/UNO_exit_roomlist"
        android:layout_toEndOf="@+id/UNO_exit_roomlist"
        android:layout_alignBottom="@+id/UNO_exit_roomlist"/>

</RelativeLayout>
